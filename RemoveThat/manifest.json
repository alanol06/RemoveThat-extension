{
  "manifest_version": 3,
  "name": "Remove That!",
  "description": "Click → delete",
  "version": "1.0",
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_title": "Включить удаление элементов"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}